<% if flash[:alert] %>
	<div class="alert alert-danger">
	  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
	    <span aria-hidden="true">&times;</span>
	  </button>
	  <%= flash[:alert] %>
	</div>
<% elsif flash[:success] %>
	<div class="alert alert-success">
	  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
	    <span aria-hidden="true">&times;</span>
	  </button>
	  <%= flash[:success] %>
	</div>
<% elsif flash[:notice] %>
	<div class="alert alert-info">
	  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
	    <span aria-hidden="true">&times;</span>
	  </button>
	  <%= flash[:notice] %>
	</div>
<% end %>
