<div class="container">
<h2>Manage Brands 
	<%= link_to new_brand_path, class: "btn btn-primary pull-right" do %>
		<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add new brand
	<% end %>	
</h2>
<hr>
<div class="panel panel-default">
	<table class="table table-hover table-responsive">
		<thead>
			<tr>
				<th>Brand name</th>
				<th colspan="2">Brand abbreviation</th>
			</tr>
		</thead>
		<tbody>
			<% @brands.each do |brand| %>
			<tr>
				<td><%= brand.full_name %></td>
				<td><%= brand.name %></td>
				<td class="text-right">
					<div class="btn-group" role="group">
					<%= link_to "Edit", edit_brand_path(brand), class: "btn btn-sm btn-default" %><%= link_to "Delete", brand_path(brand), method: :delete, data: {confirm: "Are you sure you want to delete \"#{brand.full_name}\"?"}, class: "btn btn-sm btn-default" %> 
					</div>
				</td>
			</tr>
			<% end %>
		</tbody>	
	</table>
</div>
</div>