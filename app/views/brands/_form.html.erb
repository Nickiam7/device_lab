<div class="panel panel-default remove-bottom-margin">
  <div class="panel-body">
		<%= form_for(@brand) do |f| %>
			<div class="form-group">
				<%= f.text_field :name, placeholder: :name, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.text_field :full_name, placeholder: "Full brand name", class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.submit class: "btn btn-primary btn-lg btn-block" %>
			</div>
		<% end %>
	</div>
</div>