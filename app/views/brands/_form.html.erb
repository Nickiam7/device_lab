<div class="panel panel-default">
	<div class="panel-body">
		<%= form_for(@brand) do |f| %>
			<% if @brand.errors.any? %>
				<div class="alert alert-danger">
					<ul>
						<% @brand.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
						<% end %>
					</ul>
				</div>
			<% end %>
			<div class="form-group">
				<%= f.text_field :full_name, placeholder: "Full brand name", class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.text_field :name, placeholder: "Brand abbreviation", class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.submit class: "btn btn-primary btn-lg btn-block" %>
			</div>
		<% end %>
	</div>
</div>
<%= link_to  :back do %>
	&larr; back
<% end %>