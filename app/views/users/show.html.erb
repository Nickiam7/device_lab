<div class="container">
<h2>Hello <%= @user.username %> 
	<%= link_to new_link_path, class: "btn btn-primary pull-right" do %>
		<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Create new link
	<% end %>	
</h2>
<hr>
	<div class="row">
		<div class="col-md-9">
			<div class="panel panel-default">
				<div class="table-responsive">
					<table class="table table-hover">
					<caption><a  data-toggle="collapse" href="#search-collapse" aria-expanded="false" aria-controls="search-collapse" class="search-button"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search</a></caption>
					<div class="collapse" id="search-collapse">
					  <div class="search-area">
					  	<div class="input-group">
						    <%= search_form_for @q, url: user_path(current_user) do |f| %>
						    	<%= f.search_field :title_or_brand_full_name_or_brand_name_cont, placeholder: "Search by link title, brand name or brand abbreviation", class: "form-control" %>
						    	<span class="input-group-btn">
							    	<%= f.submit "Search", class: "btn btn-primary" %>
						    	</span>
						    <% end %>
					    </div>
					  </div>
					</div>
						<thead>
							<tr>
								<th>Link text</th>
								<th>Link url</th>
								<th>Brand</th>
								<th colspan="2">Posted on</th>
							</tr>
						</thead>
						<tbody>
							<% if @links.any? %>
								<% @links.each do |link| %>
									<tr>
										<td><%= link.title? ? link.title : "No title provided"  %></td>
										<td><%= link_to sanitize(link.url), sanitize(link.url), target: "_blank" %></td>
										<td><%= link.brand.full_name %></td>
										<td><%= link.created_at.strftime("%m/%d/%y") %></td>
										<td>
											<a tabindex="0" type='button' class='btn btn-sm btn-default' data-toggle='popover' data-placement='left' data-content='Yes, delete <strong>&ldquo;<%= "#{link.title}" %>&rdquo; <br></strong> <%= link_to 'Delete', link_path(link), method: :delete, class: 'btn btn-xs btn-danger' %>'>Delete</a>

										</td>
									</tr>
								<% end %>
							<% end %>	
						</tbody>
					</table>
				</div>
				<div class="panel-footer remove-padding text-right">
					<%= will_paginate @links, container: false, renderer: BootstrapPagination::Rails%>
				</div>	
			</div>
			<% if !@links.any? %>
				<div class="text-center">
					<h3>You don't have any links yet.</h3>
					<%= link_to new_link_path, class: "btn btn-primary btn-lg" do %>
						<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Create new link
					<% end %>
				</div>
			<% end %>
		</div>
		<div class="col-md-3">
			<div class="panel panel-default">
			  <div class="panel-heading">
			    <h3 class="panel-title">Links by brand:</h3>
			  </div>
			  <ul class="list-group">
			  	<% @brands.each do |brand| %>
			  		<li class="list-group-item">
			  		<span class="badge"><%= brand.links.where(user: current_user).count %></span>
			  			<%= brand.full_name %>	
			  		</li>
			  	<% end %>
			  </ul>
			  <div class="panel-footer">
				  	<span class="badge pull-right"><%= current_user.links.count %></span>
				  	<strong>Total links</strong>
				  </div>
			</div>			
		</div>
	</div>
</div>
<script>
	$(function () {
	  $('[data-toggle="popover"]').popover({
	  	html: true,
	  	animation: true,
	  	trigger: "focus",
	  	title : 'Are you sure? <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>',
	  })
	})
</script>
