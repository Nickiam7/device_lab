<div class="panel panel-default remove-bottom-margin">
	<div class="panel-body">
		<%= form_for(@link) do |f| %>
			<% if @link.errors.any? %>
				<div class="alert alert-danger">
					<ul>
						<% @link.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
						<% end %>
					</ul>
				</div>
			<% end %>
			<div class="form-group">
				<%= f.text_field :url, placeholder: :url, class: "form-control" %>
			</div>
			<div class="form-group">	
				<%= f.text_field :title, placeholder: :title, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= collection_select(:link, :brand_id, @brands, :id, :name, prompt: "Select a brand") %>
			</div>
			<div class="form-group">
				<%= f.submit "Send link to device lab", class: "btn btn-primary btn-lg btn-block" %>
			</div>
		<% end %>
		<%= link_to "< back", :back %>
	</div>	
</div>